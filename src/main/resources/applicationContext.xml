<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <context:annotation-config/>

    <bean id="userService" class="dushkof.seaWars.services.impl.UserServiceImpl">
        <property name="gameService" ref="gameService"/>
    </bean>

    <bean id="gameService" class="dushkof.seaWars.services.impl.GameServiceImpl"/>

    <bean id="playService" class="dushkof.seaWars.services.impl.PlayServiceImpl"/>

    <bean id="dataSource"
          class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="driverClassName" value="org.h2.Driver" />
        <property name="url" value="jdbc:h2:file:~\seawars.trace.db" />
        <property name="username" value="" />
        <property name="password" value="" />
    </bean>

    <bean id="passwordEncoder" class="org.springframework.security.crypto.password.Pbkdf2PasswordEncoder"/>

</beans>